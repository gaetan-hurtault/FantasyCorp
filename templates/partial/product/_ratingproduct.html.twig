<div>
    {% if rating >= 1 %}
        {% for i in 1..rating|number_format(0) %}
            <i class="fas fa-star text-warning"></i>
        {% endfor %}
    {% endif %}
    {% if (rating - rating|number_format(0) > 0.25) %}
        <i class="fas fa-star-half-alt text-warning"></i>
        {% if rating <= 4.25 %}
            {% for i in 1..(4 - rating|number_format(0)) %}
                <i class="far fa-star text-warning"></i>
            {% endfor %}
        {% endif %}
    {% else %}
        {% if rating <= 4.25 %}
            {% for i in 1..(5 - rating|number_format(0)) %}
                <i class="far fa-star text-warning"></i>
            {% endfor %}
        {% endif %}
    {% endif %}
</div>