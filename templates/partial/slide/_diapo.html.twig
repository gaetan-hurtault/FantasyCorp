<div id="carousel" class="carousel slide d-none d-lg-block" data-ride="carousel">
  <div class="carousel-inner">
  {% for slide in slides %}
    <div class="carousel-item">
        {% if slide.product is not null %}
        <a href="{{ path('product.information', {slug: slide.product.slug,id_product: slide.product.id}) }}">
            <img class="d-block w-100" src="{{ absolute_url(asset('picture/content/' ~ slide.picture.name))}}" alt="First slide">
        </a>
        {% elseif slide.theme is not null %}
        <a href="{{ path('product.search.page', {theme: slide.theme.id}) }}">
            <img class="d-block w-100" src="{{ absolute_url(asset('picture/content/' ~ slide.picture.name))}}" alt="First slide">
        </a>
        {% elseif slide.page is not null %}
        <a href="{{ path('page.view', {slug: slide.page.slug,id_page: slide.page.id}) }}">
            <img class="d-block w-100" src="{{ absolute_url(asset('picture/content/' ~ slide.picture.name))}}" alt="First slide">
        </a>
        {% else %}
            <img class="d-block w-100" src="{{ absolute_url(asset('picture/content/' ~ slide.picture.name))}}" alt="First slide">
        {% endif %}
    </div>
  {% endfor %}
  </div>
  <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<script>
let carouselSlide = $('.carousel-inner .carousel-item');
$(carouselSlide[0]).addClass('active');
</script>