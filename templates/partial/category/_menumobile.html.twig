{% for category in categories %}
  <div class="category font-weight-bold border-bottom border-light w-100">
    {% if category.categories is not empty %}
    <a class="text-light d-block w-100" data-toggle="collapse" href="#category{{category.id}}" aria-expanded="false" aria-controls="menuMobile">
                    {{ category.name }} 
    </a>
    <div class="collapse bg-dark w-100 " id="category{{category.id}}">
      {% for sousCategory in category.categories %}
      <div class="font-weight-bold border-bottom border-light w-100">
        <a class="text-light d-block w-100" href="{{ path('product.byCategory', {slug: sousCategory.slug,id_category: sousCategory.id}) }}">
          {{ sousCategory.name }}
        </a>
      </div>
      {% endfor %}
    </div>
    {% else %}
    <a class="text-light" title="cat{{ category.id }}" href="{{ path('product.byCategory', {slug: category.slug,id_category: category.id}) }}">
          {{ category.name }}
    </a>
    {% endif %}
  </div>
{% endfor %}

