{% extends 'admin/index.html.twig' %}

{% block title %}Liste des Paramètres !{% endblock %}

{% block body %}
<table  class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                Nom du paramètre
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
    {% for parametre in parametres %}
        <tr>         
            <td>
                {{ parametre.title }}
            </td>
            <td>
                <a href="{{path("admin.globalparameter.editer", {id : parametre.id})}}" class="btn btn-secondary">Editer</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
